{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2015",
        "module": "commonjs",
        
        "esModuleInterop": true,
        "skipLibCheck": true,

        "forceConsistentCasingInFileNames": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,

        "allowJs": false,
        "outDir": "./dist",
        "sourceMap": true
    },
}